<?xml version="1.0"?>
<!-- ====================================================================== 

     Buildfile zum SWTKal.Swing Teilprojekt
                   
     ====================================================================== -->

<project name="SWTKal.Swing" default="default">
	
	<property name="deploy.dir" value="deploy/jars"/>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="deploy.jar">
    	<echo>Buildfile SWTKal.Swing-Teilprojekt</echo>
     </target>

    <!-- ================================= 
          target: deploy.jar              
         ================================= -->
    <target name="deploy.jar" depends="deploy.dirs"
	        description="stellt die SWTKal.Swing-Klassen als Jar-Datei zur Verfuegung">
    	<jar destfile="${deploy.dir}/swtkal.swing.jar"><fileset dir="bin" excludes="junit/** *.xml *.log"/></jar>
    </target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: deploy.dirs                      
         - - - - - - - - - - - - - - - - - -->
    <target name="deploy.dirs">
    	<mkdir dir="${deploy.dir}"/>
    </target>

</project>
