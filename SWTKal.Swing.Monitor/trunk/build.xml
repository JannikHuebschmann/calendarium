<?xml version="1.0"?>
<!-- ====================================================================== 

     Buildfile zum SWTKal.Swing.Monitor Teilprojekt
                   
     ====================================================================== -->

<project name="SWTKal.Swing.Monitor" default="default">
	
	<property name="deploy.dir" value="deploy/jars"/>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="deploy.jar">
    	<echo>Buildfile SWTKal.Swing.Monitor-Teilprojekt</echo>
     </target>

    <!-- ================================= 
          target: deploy.jar              
         ================================= -->
    <target name="deploy.jar" depends="deploy.dirs"
	        description="Stellt die SWTKal.Swing.Monitor-Klassen als Jar-Datei zur Verfuegung.">
    	<jar destfile="${deploy.dir}/swtkal.swing.monitor.jar"><fileset dir="bin" excludes="junit/**"/></jar>
    </target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: deploy.dirs                      
         - - - - - - - - - - - - - - - - - -->
    <target name="deploy.dirs">
    	<mkdir dir="${deploy.dir}"/>
    </target>

</project>
